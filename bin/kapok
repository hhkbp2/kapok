#!/usr/bin/env bash

usage() {
    echo "Usage: $(basename $0) [options] [.cb file]" >&2
}

if [ $# == 0 ] || [ "$1" = "--help" ] || [ "$1" = "-h" ]; then
    usage
    exit 1
fi

ERL="erl"
ERL_OPTIONS="-noshell -s kapok start_cli"

exec "${ERL}" -pa "./ebin" -pa "$HOME/tmp/ws" -run_mode script ${ERL_OPTIONS} -extra "$@"

