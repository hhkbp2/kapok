#!/bin/sh
# kapok development tool

usage() {
  echo "Usage: `basename $0` [options]"
}

if [ $# -eq 0 ] || [ "$1" == "--help" ] || [ "$1" == "-h" ]; then
  usage
  exit 1
fi

readlink_f() {
  cd "$(dirname "$1")" > /dev/null
  filename="$(basename "$1")"
  if [ -L "$filename" ]; then
    readlink_f "$(readlink "$filename")"
  else
    echo "$(pwd -P)/$filename"
  fi
}

PROGRAM=$(readlink_f "$0")
PROGRAM_DIR=$(dirname "$PROGRAM")
kapok $PROGRAM_DIR/../lib/kdt/lib/kapok.kdt.kpk "$@"
