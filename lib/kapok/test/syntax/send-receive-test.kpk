(ns send-receive-test
  (use kunit))

(defn- child []
  (receive
    ({pid n}
     (send pid (inc n)))))

(defn- calc-timeout []
  10)

(defn- plus-one [n]
  (let [child-pid (spawn (fn child 0))]
    (send child-pid {(self) n})
    (receive
      (m (&when (integer? m))
         m)
      (after (calc-timeout)
         (throw "timeout")))))

(defn main []
  (test "test send receive"
    (let [n 1]
      (assert (=== (inc n)
                   (plus-one n)))))
  )
